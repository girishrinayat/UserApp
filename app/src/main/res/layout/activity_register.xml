<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#910278"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:src="@drawable/userimg"
            />
    </RelativeLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/edittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <EditText
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/user_24dp"
            android:inputType="text"
            android:id="@+id/eName"
            android:layout_width="match_parent"
            android:hint="Full Name"
            android:layout_height="wrap_content" />


        <EditText
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:drawableLeft="@drawable/email_24dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:id="@+id/eEmail"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:drawableLeft="@drawable/pass_24dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/ePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_no_encryption_black_24dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:id="@+id/eConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:maxLength="10"
            android:id="@+id/eMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/bregister"
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>