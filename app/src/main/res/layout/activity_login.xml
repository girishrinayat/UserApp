<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:src="@drawable/userimg"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"/>
        <EditText
            android:id="@+id/eUserName"
            android:hint="username"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/user_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20dp"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"/>
        <EditText
            android:inputType="textPassword"
            android:drawableLeft="@drawable/pass_24dp"
            android:id="@+id/ePassword"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cShowPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Password"
            />

        <Button
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bLogin"
            android:text="Login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30sp">

            <TextView
                android:layout_weight="0.5"
                android:layout_marginRight="5sp"
                android:textColor="#890101"
                android:id="@+id/tforgetPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Forget Password? "
                />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="||"/>

            <TextView
                android:layout_marginLeft="5sp"
                android:layout_weight="0.5"
                android:textColor="#890101"
                android:id="@+id/tRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Register Here!"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>